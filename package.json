{
  "name": "utils-mall",
  "version": "2.0.0",
  "description": "云mall工具库",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "jest --coverage --verbose -u",
    "api": "api-extractor run",
    "build": "gulp build",
    "git": "git pull && git add . && git commit -m ",
    "postgit": "git push",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern src/*",
    "lint:fix": "npm run lint -- --fix",
    "changelog": "gulp changelog",
    "preinstall": "node -e \"if (parseInt(process.versions.node.split('.')[0]) !== 18) { console.error('请使用 Node 18'); process.exit(1); }\"",
    "prepare": "npx husky install",
    "release:alpha": "npm run lint && npm run test && npm run changelog && npm run build && npm publish --tag alpha --access public --no-git-checks",
    "release:beta": "npm run lint && npm run test && npm run changelog && npm run build && npm publish --tag beta --access public --no-git-checks",
    "release": "npm run lint && npm run test && npm run changelog && npm run build && npm publish --tag latest --access public",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged & jest -u"
    }
  },
  "lint-staged": {
    "src/*": [
      "eslint",
      "git add"
    ]
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md"
  ],
  "sideEffects": "false",
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.8",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@microsoft/api-extractor": "^7.39.1",
    "@rollup/plugin-json": "^6.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.17",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chalk": "^5.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.3",
    "fs-extra": "^11.2.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "rollup": "^2.79.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
